<h2>Create a pet</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/pets/create" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Profile picture:
          <input type="file" name="Profilepicture" class="form-control-file" />
        </label>
      </div>
 
      <div class="form-group">
        <label>Name:
          <input type="text" name="name" class="form-control" />
        </label>
      </div>
 
      <div class="form-group">
        <label>Type of pet:
          <textarea name="description" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>
 
      <div class="form-group">
        <label>Weight:
          <input type="text" name="weigth" class="form-control-file" />
        </label>
      </div>
 
       <div class="form-group">
        <label>Age:
          <input type="number" name="" class="form-control-file" />
        </label>
      </div>
      <div class="form-group">
        <label>Birthdate:
          <input type="date" name="" class="form-control-file" />
        </label>
      </div>
            <div class="form-group">
        <label>Gender:
          <input type="text" name="" class="form-control-file" />
        </label>
      </div>
            <div class="form-group">
        <label>Breed:
          <input type="text" name="" class="form-control-file" />
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>