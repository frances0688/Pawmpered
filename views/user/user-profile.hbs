      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.name}} {{user.lastName}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.phone}}</p>
              </div>
            </div>
            <hr>
            {{#if user.addressStreet}}
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.addressStreet}}, {{user.addressCity}}, {{user.addressZip}} {{user.addressState}}</p>
              </div>
            </div>
            <hr>
            {{/if}}
            {{#if user.emergencyContactName}}
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Emergency Contact</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">Name: {{user.emergencyContactName}}</p>
                <p class="text-muted mb-0">Phone Number: {{user.emergencyContactPhone}}</p>
              </div>
            </div>
            <hr>
            {{/if}}
          </div>
        </div>
        <div class="row">
          {{#each user.pets}}
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src={{imgPath}} alt="profile picture" class="rounded-circle img-fluid" style="width: 150px;">
                  <h5 class="my-3">{{name}}</h5>

                  <div class="d-flex justify-content-center mb-2">
                    <button type="button" class="btn btn-outline-secondary me-3"><a href="/user/{{../user._id}}/mypet/{{_id}}">View Profile</a></button>
